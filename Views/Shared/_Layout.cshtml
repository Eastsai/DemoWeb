<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">    
    <title>Demo</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/DemoWeb.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />        
    <link href="~/Content/flex-tree.min.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>    
    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/jquery.blockUI.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>           
    <script src="~/Scripts/flex-tree.min.js"></script>
    @RenderSection("scripts", required: false)
</head>
<body>   
    @*首頁不顯示主選單
    登入後每個頁面再套選單的版*@
    @if (@ViewBag.Title != "Index")
    {
        <div class="divlev1">
            <div class="divlev21 toggle">               
                @Html.Partial("_MainFunc")                
            </div>                      
            <div class="divlev22">            
                @Html.Partial("_SubFunc")
                <div class="divlev222 body-content">
                    @RenderBody()
                </div>
            </div>
        </div>
    }
    else {
        <div class="container body-content">            
            @RenderBody()
        </div>
        
    } 
</body>
</html>
