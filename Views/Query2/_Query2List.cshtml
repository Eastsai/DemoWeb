@model IEnumerable<DemoWebDAO.DataModel.Cust>

<hr />
@using (Html.BeginForm()) {

    <table border="1" class="table table-sm table-bordered table-hover">
        <tr>
            <th>@Html.DisplayNameFor(m => m.Sno)</th>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Age)</th>
            <th>@Html.DisplayNameFor(m => m.Account)</th>            
            <th>@Html.DisplayNameFor(m => m.Address)</th>
            <th>@Html.DisplayNameFor(m => m.City)</th>
            <th>@Html.DisplayNameFor(m => m.Mail)</th>
            <th colspan="2">@Html.DisplayName("作業")</th>
        </tr>
        @if (Model != null) {
            foreach (var item in Model)
            {
                <tr>                    
                    <td>@Html.DisplayFor(mi => item.Sno,new {@class="form-control" })</td>                    
                    <td>@Html.ActionLink(item.Name,"Query2Detail",item)</td>                                  
                    <td>@Html.DisplayFor(mi => item.Age)</td>                    
                    <td>@Html.DisplayFor(mi => item.Account)</td>                    
                    <td>@Html.DisplayFor(mi => item.Address)</td>
                    <td>@Html.DisplayFor(mi => item.City)</td>       
                    <td>@Html.DisplayFor(mi => item.Mail)</td>
                    <td>@Html.ActionLink("修改", "Query2Detail", item)</td>                               
                    <td><input type="button" class="butlink" value="刪除" onclick="delCust(@item.Sno)"  /></td>
                </tr>
            }
        }       
    </table>
}